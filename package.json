{
  "name": "calendrier",
  "version": "1.0.6",
  "description": "Une application calendrier minimaliste pour bureau",
  "author": {
    "name": "Nana Elie",
    "email": "nae.devp@gmail.com",
    "url": "https://github.com/nanaelie"
  },
  "homepage": "https://github.com/nanaelie/calendar",
  "main": "dist/main.js",
  "scripts": {
	  "start": "tsc && electron .",
	  "dev": "tsc --watch && electron .",
	  "devn": "electron .",
	  "build": "tsc",
	  "dist": "tsc && electron-builder"
	},
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^26.6.10",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "fs-extra": "^11.3.1",
    "node-notifier": "^10.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.nae.calendar",
    "productName": "Calendrier",
    "directories": {
      "buildResources": "src/assets/images",
      "output": "dist_build"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "icon": "src/assets/images/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "src/assets/images/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "src/assets/images",
      "category": "Office",
      "maintainer": "Nana Elie nae.devp@gmail.com",
      "target": [
        "AppImage",
        "deb",
        "snap"
      ]
    },
    "publish": [
    {
      "provider": "github"
    }
  ]
  }
}
